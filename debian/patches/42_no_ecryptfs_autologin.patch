+static gboolean
+using_ecryptfs (const gchar *username)
+{
+        gchar *path;
+        struct stat statbuf;
+        struct passwd *info;
+        int r;
+
+        info = getpwnam (username);
+        if (!info)
+                return FALSE;
+
+        path = g_build_filename (info->pw_dir, ".ecryptfs", "auto-mount", NULL);
+        r = g_stat (path, &statbuf);
+        g_free (path);
+        return r == 0;
+}
